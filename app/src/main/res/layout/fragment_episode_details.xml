<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context="hr.from.ivantoplak.podplay.ui.EpisodeDetailsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/headerBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/episodeImageView"
            android:layout_width="@dimen/episode_image_view_size"
            android:layout_height="@dimen/episode_image_view_size"
            android:layout_marginStart="@dimen/episode_image_view_margin"
            android:layout_marginTop="@dimen/episode_image_view_margin"
            android:contentDescription="@string/episode_image_description"
            android:src="@android:drawable/ic_menu_report_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/feedTitleTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/feed_title_margin"
            android:layout_marginTop="@dimen/feed_title_margin"
            android:layout_marginEnd="@dimen/feed_title_margin"
            android:textSize="@dimen/feed_title_text_size"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/episodeImageView"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Feed Title" />

        <TextView
            android:id="@+id/episodeTitleTextView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/episode_title_margin"
            android:layout_marginEnd="@dimen/episode_title_margin"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="@dimen/episode_title_text_size"
            app:layout_constraintBottom_toBottomOf="@+id/episodeImageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/episodeImageView"
            app:layout_constraintTop_toBottomOf="@+id/feedTitleTextView"
            tools:text="Episode Title" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/episodePlayButton"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/episode_play_button_margin"
            android:layout_marginTop="@dimen/episode_play_button_margin"
            android:layout_marginEnd="@dimen/episode_play_button_margin"
            android:layout_marginBottom="@dimen/episode_play_button_margin"
            app:cornerRadius="@dimen/material_button_corner_radius"
            app:icon="@drawable/ic_episode_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/episodeImageView"
            tools:text="Play | 00:24:10" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerView">

        <TextView
            android:id="@+id/episodeDescTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/episode_description_padding"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            tools:text="Episode description" />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
