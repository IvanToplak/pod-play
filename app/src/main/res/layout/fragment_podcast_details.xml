<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/headerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-8dp"
        app:cardBackgroundColor="?attr/colorSurface"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.motion.widget.MotionLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutDescription="@xml/fragment_podcast_details_header_scene"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/feedImageView"
                android:layout_width="@dimen/feed_image_size"
                android:layout_height="@dimen/feed_image_size"
                android:layout_marginStart="@dimen/feed_image_margin"
                android:layout_marginTop="@dimen/feed_image_margin"
                android:contentDescription="@string/feed_image_description"
                android:src="@android:drawable/ic_menu_report_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/feedTitleTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/feed_title_margin"
                android:layout_marginTop="@dimen/feed_title_margin"
                android:layout_marginEnd="@dimen/feed_title_margin"
                android:textAppearance="?attr/textAppearanceSubtitle2"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/feedImageView"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Feed Title" />

            <TextView
                android:id="@+id/feedCategoryTextView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/feed_category_margin"
                android:layout_marginEnd="@dimen/feed_category_margin"
                android:ellipsize="end"
                android:maxLines="2"
                android:textAppearance="?attr/textAppearanceSubtitle2"
                app:layout_constraintBottom_toBottomOf="@+id/feedImageView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/feedImageView"
                app:layout_constraintTop_toBottomOf="@+id/feedTitleTextView"
                tools:text="Feed category" />

            <TextView
                android:id="@+id/feedDescTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                tools:maxLines="2"
                android:textAppearance="?attr/textAppearanceBody2"
                tools:text="This is a description of the selected feed. This is a description of the selected feed. This is a description of the selected feed. This is a description of the selected feed." />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/toggleSubscriptionButton"
                style="@style/PodPlay.OutlinedButton.Icon"
                android:layout_marginStart="@dimen/toggle_subscription_button_margin"
                android:layout_marginTop="@dimen/toggle_subscription_button_margin_top"
                android:layout_marginBottom="@dimen/toggle_subscription_button_margin_bottom"
                app:icon="@drawable/ic_subscriptions_white_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/feedDescTextView"
                app:layout_constraintVertical_bias="1.0"
                tools:text="Subscribe" />
        </androidx.constraintlayout.motion.widget.MotionLayout>
    </com.google.android.material.card.MaterialCardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/episodeRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerView" />
</androidx.constraintlayout.widget.ConstraintLayout>